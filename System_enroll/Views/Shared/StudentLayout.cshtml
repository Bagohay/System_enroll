<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Student/StudentLayout.css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="logo">XYZ University - Student Portal</div>
        <nav>
            <ul>
                <li>@Html.ActionLink("Dashboard", "Student_Dashboard", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Profile", "Profile", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Enrollment", "Enrollment_Form", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Logout", "Login_Page", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </nav>
    </div>
    <header>
        <div class="container">
            <div class="header-content">
                <!-- Header content can be customized if needed -->
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Contact Us</h3>
                    <p>123 University Avenue</p>
                    <p>City, State 12345</p>
                    <p>Email: info@xyzuniversity.edu</p>
                    <p>Phone: (123) 456-7890</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul class="footer-links">
                        <li><a href="#">Academic Calendar</a></li>
                        <li><a href="#">Library</a></li>
                        <li><a href="#">Campus Map</a></li>
                        <li><a href="#">Career Services</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Follow Us</h3>
                    <ul class="footer-links">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year XYZ University. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
    <script>
       
        document.querySelectorAll('.nav-link').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
               
                if (this.getAttribute('href').startsWith('#')) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop,
                            behavior: 'smooth'
                        });
                    }
                }
                
            });
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>