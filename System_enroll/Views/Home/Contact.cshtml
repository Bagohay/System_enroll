@{
    ViewBag.Title = "Contact";
}

@section styles {
    <link href="@Url.Content("~/Content/Contact.css")" rel="stylesheet" type="text/css" />
}

<section class="hero">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We're here to answer your questions and help you connect with the right department or program at XYZ University.</p>
    </div>
</section>

<section class="contact-info">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h3>Main Campus</h3>
                <p>123 University Avenue</p>
                <p>City, State 12345</p>
                <p>United States</p>
            </div>

            <div class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <h3>Phone</h3>
                <p>Main: (123) 456-7890</p>
                <p>Admissions: (123) 456-7891</p>
                <p>Financial Aid: (123) 456-7892</p>
            </div>

            <div class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <h3>Email</h3>
                <p>General Inquiries: info@xyzuniversity.edu</p>
                <p>Admissions: admissions@xyzuniversity.edu</p>
                <p>Financial Aid: finaid@xyzuniversity.edu</p>
            </div>

            <div class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>Office Hours</h3>
                <p>Monday - Friday: 8:00 AM - 5:00 PM</p>
                <p>Saturday: 9:00 AM - 1:00 PM</p>
                <p>Sunday: Closed</p>
            </div>
        </div>
    </div>
</section>

<section class="contact-form-section">
    <div class="container">
        <h2 class="section-title">Send Us a Message</h2>
        <div class="form-container">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "contact-form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="form-row">
                    <div class="form-group half">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone" name="phone" />
                    </div>
                    <div class="form-group half">
                        <label for="department">Department</label>
                        <select id="department" name="department">
                            <option value="">Select Department</option>
                            <option value="admissions">Admissions</option>
                            <option value="financial-aid">Financial Aid</option>
                            <option value="academic-affairs">Academic Affairs</option>
                            <option value="student-services">Student Services</option>
                            <option value="alumni-relations">Alumni Relations</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" required />
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="6" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-accent">Send Message</button>
                </div>
            }
        </div>
    </div>
</section>

<section class="map-section">
    <div class="container">
        <h2 class="section-title">Find Us</h2>
        <div class="map-container">
            <!-- Replace with actual map embed code -->
            <div class="map-placeholder">
                <p>Interactive campus map would be displayed here.</p>
                <p>For this example, imagine a Google Maps embed showing the university campus.</p>
            </div>
        </div>
    </div>
</section>

<section class="faq-section">
    <div class="container">
        <h2 class="section-title">Frequently Asked Questions</h2>
        <div class="faq-container">
            <div class="faq-item">
                <div class="faq-question">
                    <h3>What are the application deadlines?</h3>
                    <span class="faq-toggle">+</span>
                </div>
                <div class="faq-answer">
                    <p>For undergraduate programs, the early decision deadline is November 1, and the regular decision deadline is January 15. For graduate programs, deadlines vary by department, but most fall between December 1 and February 1.</p>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <h3>How can I schedule a campus tour?</h3>
                    <span class="faq-toggle">+</span>
                </div>
                <div class="faq-answer">
                    <p>Campus tours are available Monday through Friday at 10:00 AM and 2:00 PM, and on Saturdays at 11:00 AM. You can schedule a tour through our Admissions Office by calling (123) 456-7891 or by registering online through the Admissions portal.</p>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <h3>What financial aid options are available?</h3>
                    <span class="faq-toggle">+</span>
                </div>
                <div class="faq-answer">
                    <p>XYZ University offers a variety of financial aid options, including merit-based scholarships, need-based grants, work-study programs, and federal and private loans. We recommend all students complete the FAFSA to determine their eligibility for financial assistance.</p>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <h3>How do I request my transcripts?</h3>
                    <span class="faq-toggle">+</span>
                </div>
                <div class="faq-answer">
                    <p>Current students and alumni can request official transcripts through the Registrar's Office online portal. There is a $10 fee per transcript for standard processing (5-7 business days) and a $25 fee for expedited processing (1-2 business days).</p>
                </div>
            </div>
        </div>
    </div>
</section>