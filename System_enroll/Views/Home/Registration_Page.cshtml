@{
    ViewBag.Title = "Registration_Page";
}

@section styles {
    <link href="@Url.Content("~/Content/Registration_Page.css")" rel="stylesheet" type="text/css" />
    <style>
        .credentials-box {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            padding: 15px;
            margin: 15px 0;
            border-radius: 5px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 8px 16px;
            cursor: pointer;
            border-radius: 4px;
            margin-left: 10px;
        }

        .error {
            border: 1px solid #dc3545;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        .form-group {
            display: block !important;
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
    </style>
}

<div class="registration-section">
    <div class="container">
        <h1 class="registration-title">Student Registration</h1>
        <div class="registration-form">
            <h2>New Student Registration</h2>
            <p>Please complete the form below to create your account.</p>
            <form id="registrationForm" method="post">
                <div class="form-group">
                    <label for="studentFname">First Name</label>
                    <input type="text" id="studentFname" name="firstname" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="studentMname">Middle Name (Optional)</label>
                    <input type="text" id="studentMname" name="middlename" class="form-control">
                </div>
                <div class="form-group">
                    <label for="studentLname">Last Name</label>
                    <input type="text" id="studentLname" name="lastname" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" id="emailAddress" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Contact Number</label>
                    <input type="tel" id="phoneNumber" name="phoneNum" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="homeAddress">Home Address</label>
                    <input type="text" id="homeAddress" name="homeAddress" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="cityAddress">City</label>
                    <input type="text" id="cityAddress" name="cityAddress" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="congressDistrict">Congress District</label>
                    <input type="text" id="congressDistrict" name="congressDistrict" class="form-control">
                </div>
                <div class="form-group checkbox-group">
                    <input type="checkbox" id="firstGenStudent" name="isFirstGenStudent">
                    <label for="firstGenStudent">I am a first generation student</label>
                </div>
                <div class="form-actions">
                    <button type="button" id="submitRegistration" class="btn-primary">Register Now</button>
                    <a href="/Home/Login_Page" class="btn-link">Already registered? Sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Jquery/jquery-3.7.1.js"></script>
    <script src="~/Scripts/Myscripts/Registration.js"></script>
}