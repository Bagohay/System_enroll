
@{
    ViewBag.Title = "Programs";
}

@section styles {
    <link href="@Url.Content("~/Content/Programs.css")" rel="stylesheet" type="text/css" />
}

<section class="hero">
    <div class="container">
        <h1>Academic Programs</h1>
        <p>Discover our diverse range of undergraduate and graduate programs designed to prepare you for success in today's global marketplace.</p>
    </div>
</section>

<section class="programs-overview">
    <div class="container">
        <h2 class="section-title">Our Academic Offerings</h2>

        <div class="program-categories">
            <div class="program-category">
                <h3>Undergraduate Programs</h3>
                <p>Our four-year bachelor's degree programs combine rigorous academics with practical experience to prepare you for your career or graduate studies.</p>
                <a href="#undergraduate" class="btn btn-outline">View Programs</a>
            </div>

            <div class="program-category">
                <h3>Graduate Programs</h3>
                <p>Advance your career with our master's and doctoral programs that emphasize research, innovation, and professional development.</p>
                <a href="#graduate" class="btn btn-outline">View Programs</a>
            </div>

            <div class="program-category">
                <h3>Certificate Programs</h3>
                <p>Enhance your skills or explore new interests with our focused certificate programs designed for working professionals.</p>
                <a href="#certificate" class="btn btn-outline">View Programs</a>
            </div>
        </div>
    </div>
</section>

<section id="undergraduate" class="program-listing">
    <div class="container">
        <h2 class="section-title">Undergraduate Programs</h2>

        <div class="programs-grid">
            <div class="program-card">
                <div class="program-header">
                    <h3>Bachelor of Science in Computer Science</h3>
                    <span class="program-degree">B.S.</span>
                </div>
                <p class="program-description">Develop strong programming skills and theoretical knowledge to solve complex computing problems and build innovative applications.</p>
                <ul class="program-features">
                    <li>Software Development</li>
                    <li>Artificial Intelligence</li>
                    <li>Data Science</li>
                    <li>Cybersecurity</li>
                </ul>
                <a href="#" class="btn btn-accent">Learn More</a>
            </div>

            <div class="program-card">
                <div class="program-header">
                    <h3>Bachelor of Business Administration</h3>
                    <span class="program-degree">B.B.A.</span>
                </div>
                <p class="program-description">Gain a strong foundation in business principles with specializations in marketing, finance, management, or entrepreneurship.</p>
                <ul class="program-features">
                    <li>Marketing</li>
                    <li>Finance</li>
                    <li>International Business</li>
                    <li>Entrepreneurship</li>
                </ul>
                <a href="#" class="btn btn-accent">Learn More</a>
            </div>

            <div class="program-card">
                <div class="program-header">
                    <h3>Bachelor of Arts in Psychology</h3>
                    <span class="program-degree">B.A.</span>
                </div>
                <p class="program-description">Study human behavior and mental processes through coursework, research opportunities, and hands-on experience.</p>
                <ul class="program-features">
                    <li>Clinical Psychology</li>
                    <li>Developmental Psychology</li>
                    <li>Cognitive Psychology</li>
                    <li>Neuropsychology</li>
                </ul>
                <a href="#" class="btn btn-accent">Learn More</a>
            </div>

            <div class="program-card">
                <div class="program-header">
                    <h3>Bachelor of Science in Engineering</h3>
                    <span class="program-degree">B.S.</span>
                </div>
                <p class="program-description">Develop technical expertise and problem-solving skills to design and create innovative solutions for real-world challenges.</p>
                <ul class="program-features">
                    <li>Mechanical Engineering</li>
                    <li>Electrical Engineering</li>
                    <li>Civil Engineering</li>
                    <li>Chemical Engineering</li>
                </ul>
                <a href="#" class="btn btn-accent">Learn More</a>
            </div>
        </div>
    </div>
</section>




<section class="cta-section">
    <div class="container">
        <h2>Ready to Begin Your Academic Journey?</h2>
        <p>Our admissions team is here to help you find the right program and guide you through the application process.</p>
        <div class="cta-buttons">
            <a href="#" class="btn btn-primary">Apply Now</a>
            <a href="#" class="btn btn-secondary">Request Information</a>
        </div>
    </div>
</section>

