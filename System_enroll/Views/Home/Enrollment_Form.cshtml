@{
    ViewBag.Title = "Enrollment_Form";
}

@section styles {
    <link href="@Url.Content("~/Content/Enrollment.css")" rel="stylesheet" type="text/css" />
}

<div class="enrollment-section">
    <div class="container">
        <h1 class="enrollment-title">Student Enrollment</h1>

        <div class="enrollment-form">
            <h2>Program Enrollment</h2>
            <p>Please complete your enrollment details below.</p>

            <div id="enrollmentForm">
                <!-- Hidden field for student number if passed -->
                <input type="hidden" id="studentNumber" name="studentNumber" value="@ViewBag.StudentNumber" />

                <div class="form-group">
                    <label for="studentType">Student Type</label>
                    <select id="studentType" name="studentStatusId" class="form-control">
                        <option value="">-- Select Student Type --</option>
                        <option value="1">New Student</option>
                        <option value="2">Continuing</option>
                        <option value="3">Returnee</option>
                        <option value="4">Shiftee</option>
                        <option value="5">Cross Enrollee</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="programId">Program</label>
                    <select id="programId" name="programId" class="form-control">
                        <option value="">-- Select Program --</option>
                        @if (ViewBag.Programs != null)
                        {
                            foreach (var program in ViewBag.Programs)
                            {
                                <option value="@program.Value">@program.Text</option>
                            }
                        }
                        else
                        {
                            <option value="1">Bachelor of Science in Information Technology (BSIT)</option>
                            <option value="2">Bachelor of Science in Computer Science (BIT-CT)</option>
                            <option value="3">Bachelor of Science in Information Systems (BSIS)</option>
                            <option value="4">Bachelor of Science in Computer Engineering (BSCpE)</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="yearLevel">Year Level</label>
                    <select id="yearLevel" name="yearLevel" class="form-control">
                        <option value="">-- Select Year Level --</option>
                        <option value="1">First Year</option>
                        <option value="2">Second Year</option>
                        <option value="3">Third Year</option>
                        <option value="4">Fourth Year</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="schoolYear">School Year</label>
                    <select id="schoolYear" name="schoolYear" class="form-control">
                        <option value="">-- Select School Year --</option>
                        <option value="2025-2026">2025-2026</option>
                        <option value="2024-2025">2024-2025</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="semester">Semester</label>
                    <select id="semester" name="semester" class="form-control">
                        <option value="">-- Select Semester --</option>
                        <option value="1">First Semester</option>
                        <option value="2">Second Semester</option>
                        <option value="S">Summer</option>
                    </select>
                </div>

                <div class="form-group" id="majorIdGroup" style="display: none;">
                    <label for="majorId">Major</label>
                    <select id="majorId" name="majorId" class="form-control">
                        <option value="">-- Select Major --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="blockTypeId">Enrollment Type</label>
                    <select id="blockTypeId" name="blockTypeId" class="form-control" required>
                        <option value="">-- Select Enrollment Type --</option>
                        @if (ViewBag.BlockTypes != null)
                        {
                            foreach (var blockType in ViewBag.BlockTypes)
                            {
                                <option value="@blockType.Value">@blockType.Text @(blockType.Text == "Block" ? "(Regular)" : "(Irregular)")</option>
                            }
                        }
                        else
                        {
                            <option value="1">Block (Regular)</option>
                            <option value="2">Non-Block (Irregular)</option>
                        }
                    </select>
                </div>

                <div class="form-group" id="scheduleGroup" style="display: none;">
                    <label for="schedule">Schedule (Block Only)</label>
                    <select id="schedule" name="schedule" class="form-control">
                        <option value="">-- Select Schedule --</option>
                        <option value="DAY">DAY (7 AM - 4 PM)</option>
                        <option value="NIGHT">NIGHT (4 PM - 9 PM)</option>
                    </select>
                </div>

                <div class="form-actions">
                    <button type="button" id="submitEnrollment" class="btn-primary">Submit Enrollment</button>
                    <a href="/" class="btn-link">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Jquery/jquery-3.7.1.js"></script>
<script src="~/Scripts/Myscripts/Enrollment.js"></script>