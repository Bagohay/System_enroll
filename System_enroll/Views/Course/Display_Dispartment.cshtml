@{
    ViewBag.Title = "Display_Dispartment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section styles {
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Admin/Manage_Department.css")" rel="stylesheet" type="text/css" />
}

<div class="container">
    <header>
        <h2>Department Management</h2>
        <button id="addDepartmentBtn" class="add-department-button">Add New Department</button>
    </header>

    <div class="widget">
        <table id="vwTblDepartments" class="department-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Department Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="departmentTableBody"></tbody>
        </table>
    </div>

    <!-- Add Department Modal -->
    <div id="addDepartmentModal" class="modal">
        <div class="modal-content widget">
            <span class="modal-close">&times;</span>
            <h3>Add New Department</h3>
            <div class="form-group">
                <label for="addDeptName">Department Name:</label>
                <input type="text" id="addDeptName" class="form-input" required />
            </div>
            <button type="button" id="btnAddDepartment" class="department-btn save-department-btn">Add Department</button>
        </div>
    </div>

    <!-- Edit Department Modal -->
    <div id="editDepartmentModal" class="modal">
        <div class="modal-content widget">
            <span class="modal-close">&times;</span>
            <h3>Edit Department</h3>
            <input type="hidden" id="editDeptId" />
            <div class="form-group">
                <label for="editDeptName">Department Name:</label>
                <input type="text" id="editDeptName" class="form-input" required />
            </div>
            <button type="button" id="btnUpdateDepartment" class="department-btn save-department-btn">Update Department</button>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/Jquery/jquery-3.7.1.js"></script>
    <script src="~/Scripts/Admin/ManageDepartment.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    }