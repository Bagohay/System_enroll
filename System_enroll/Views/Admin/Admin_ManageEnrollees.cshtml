@{
    ViewBag.Title = "Admin_ManageEnrollees";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Content/Admin/ManageEnrollee.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<header>
    <div class="container">
        <h1>Manage Students</h1>
    </div>
</header>
<div class="container">
    <section>
        <h3>Pending/Rejected Enrollees</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Program</th>
                    <th>School Year</th>
                    <th>Semester</th>
                    <th>Type</th>
                    <th>Application Date</th>
                    <th>Status</th>
                    <th>Section</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="pendingEnrollees"></tbody>
        </table>
    </section>

    <section>
        <h3>Approved Students</h3>
        <table id="approvedStudentsTable" class="table">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Program</th>
                    <th>School Year</th>
                    <th>Semester</th>
                    <th>Type</th>
                    <th>Enrollment Date</th>
                    <th>Status</th>
                    <th>Section</th>
                </tr>
            </thead>
            <tbody id="approvedStudents"></tbody>
        </table>
    </section>
</div>

@section scripts {
    <script src="~/Scripts/Jquery/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/Admin/ManageEnrollee.js"></script>
}