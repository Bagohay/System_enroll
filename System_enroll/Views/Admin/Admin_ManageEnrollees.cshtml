
@{
    ViewBag.Title = "Admin_ManageEnrollees";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Content/Admin/ManageEnrollee.css")" rel="stylesheet" type="text/css" />
}
<header>
    <div class="container">
        <h1>Manage Students</h1>
    </div>
</header>
<div class="container">

    <!-- Pending Enrollees Table -->
    <section>
        <h3>Pending Enrollees</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Program</th>
                    <th>Application Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="pendingEnrollees">
                <!-- Data will be populated dynamically -->
            </tbody>
        </table>
    </section>

    <section>
        <h3>Enrolled Students</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Program</th>
                    <th>Enrollment Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="enrolledStudents">
                <!-- Data will be populated dynamically -->
            </tbody>
        </table>
    </section>
</div>
<script src="~/Scripts/Jquery/jquery-3.7.1.js"></script>
<script src="~/Scripts/Admin/ManageEnrollee.js"></script>